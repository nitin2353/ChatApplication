    <link rel="stylesheet" href="../styling/style.css">
    <script src="/socket.io/socket.io.js"></script>
    <title>Select Person</title>
    <style>
    body {
        background-color: #f0f2f5;
        overflow: hidden;
        user-select: none;
    }
    .login-container {
        min-height: 96vh;
        display: flex;
        /* justify-content: center; */
        /* float: inline-start; */
    }
    .login-box {
        background: white;
        padding: 10px;
        padding-top: 20px;
        /* border-radius: 10px; */
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 400px;
        height: 100vh;

    }
    .login-box h1{
        margin-top: -10px;
        text-align: center !important;
        display: inline-flex;        
    }
    
    .select{
        height: 87vh;
        overflow-y: scroll;
        padding: 5px;
        }
        .select::-webkit-scrollbar {
            display: none;
    }
    .user{
        background-color: antiquewhite;
        width: 100%;
        height: 50px;
        border-radius: 10px;
        margin-top: 10px;
    }
    .user img{
        height: 35px;
        width: 35px;
        margin: 8px;
        border-radius: 50px;
        object-fit: cover;
        object-position: top;
    }
    .user .name{
        display: flex;
        margin-top:-48px !important;    
        font-size: 16px;
        margin: 10px;
        margin-left: 70px;
        font-weight: 700;
        color: black;
        align-items: center;
    } 
    .user .mob{
        display: flex;
        margin-top:-14px !important;    
        font-size: 16px;
        margin: 10px;
        margin-left: 70px;
        font-weight: 700;
        color: black;
        align-items: center;
    }
    hr{
        margin-top: -3px;
    }
    
    .search-box{
        height: 40px;
        width: 100%;
        display: none;
        border-radius: 5px;
    }
    .login-popup{
    position: absolute;
    display: flex;
    border-radius: 5px;
    border: 1px solid black;
    background-color: aliceblue;
    z-index: 5;
    margin-top: -20px;
    height: 100px;
    width: 130px;
    display: none;
  }
  .bi-gear{
    font-size: 30px;
    cursor: pointer;
  }
  .login-popup ul{
    margin-top: 15px;
  } 
  .login-popup ul li{
    margin-top: 10px;
    list-style: none;
    font-size: 20px;
    margin-left: -25px;
    cursor: pointer;
  }
  .bi-search{
    float: inline-end !important;
    font-size: 20px !important;
    margin-top: 7px;
  }

  .about{
        display: flex;
        margin-top:-10px !important;    
        font-size: 15px;
        margin: 10px;
        margin-left: 70px;
        font-weight: 600;
        opacity: 60%;
        align-items: center;
  }
    .bi-person-fill-add , .bi-send-arrow-up , .bi-hand-index-thumb-fill{
    font-size: 40px;
    display: flex;
    bottom: 0 !important;
    position: fixed;
    margin-bottom: 40px;
    border: 1px solid antiquewhite;
    height: 50px;
    width:  50px;
    padding: 5px 5px 5px 5px;
    border-radius: 50px;
    background-color: rgba(0, 0, 0, 0.212);
    }

@media screen and (max-width: 900px) {

    .select{
        height: 80vh;
        overflow-y: scroll;
        padding: 5px;
        }
        .select::-webkit-scrollbar {
            display: none;
    }

    .login-container {
        min-height: 96vh;
        display: flex;
        justify-content: center !important;
        padding: 0%;
     
    }
    .user{
        /* width: 300px; */
        /* margin-left: 3px !important; */
    }
    .bi-person-fill-add , .bi-send-arrow-up , .bi-hand-index-thumb-fill{
        font-size: 40px;
        display: flex;
        bottom: 0 !important;
        position: fixed;
        /* float: inline-end !important; */
        margin-bottom: 40px;
        border: 1px solid antiquewhite;
        height: 50px;
        width:  50px;
        right: 30px;
        padding: 5px 5px 5px 5px;
        border-radius: 50px;
        background-color: rgba(179, 128, 82, 0.212);
    }

    .chats{
        display: none !important;
    }
    .escchat{
        background: white;
        width: 100%;
        max-width: 80vw;
        margin-left: 3px;
        height: 100vh;
        display: none !important;

    }

}


.chats{
    background: white;
    border-radius: 10px;
    width: 100%;
    max-width: 80vw;
    margin-left: 3px;
    display: none;
}

.groupform {
  height: 100vh;
  width: 60vw;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid black;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.login-box button{
    height: 30px;
    width: 100px;
    border-radius: 20px;
    border: none;
    background-color: rgb(221, 184, 136);

}

.selectusers{
  /* margin-top: -30px !important; */
  float: inline-end;
  margin-top: 20px;
  margin-right: 10px;
  display: none;
  z-index: 5;
}


.escchat{
    background: white;
    width: 100%;
    max-width: 80vw;
    margin-left: 3px;
    height: 100vh;
    display: block;

}
.escchat img{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 80px;
    height: 400px;
}


.chat-footer {
    display: flex;
    gap: 10px;
    padding: 10px;
    position: absolute;
    bottom: 0;
    /* right: 0; */
    /* left: 422px; Equal to left sidebar width */
    background-color: #fff;
    border-top: 1px solid #ccc;
    box-shadow: 0 -1px 5px rgba(0,0,0,0.1);
    z-index: 10;
}

.inputval {
    flex: 1;
    padding: 10px;
    font-size: 16px;
    border-radius: 10px;
    border: none !important;
    border: 1px solid #ccc;
    outline: none;
}

input:focus {
  border: none !important;
  box-shadow: none !important;
  outline: none !important;
}


#send-btn {
    /* padding: 10px 20px; */
    font-size: 16px;
    color: black;
    font-weight: 700;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    background-color: transparent;
    font-size: 30px;
    height: 20px;
    margin-bottom: 20px !important;

}

::-webkit-scrollbar {
  width: 0px;
  height: 0px;
}

</style>
</head>
<body>
        <div>
            <div class="login-container">
                <div class="login-box" >
                <i class="bi bi-gear"></i>
                <div class="login-popup">
                    <ul>
                        <li class="bi bi-person-circle"><i  style="margin-right: 10px;"></i>Profile</li>
                        <li class="bi bi-box-arrow-left"><i style="margin-right: 10px;"></i>Logout</li>
                    </ul>
                </div>
                <h1 class="text-center login myname"></h1><i class="bi bi-search search"></i>
                <hr>
                
                <i class="bi bi-person-fill-add" data-bs-toggle="modal" data-bs-target="#staticBackdrop"></i>
                <input type="search" placeholder="Search Here" class="search-box">
                <div class="select"></div>
            </div>

            <div class='escchat'>
            <center> <img src="../chatimg.jpg"></center>
            </div>
        
            <div class="chats">
                    <div class="chatbox" style="padding-bottom: 12px;">
                        <div class="chat-header">
                        <a href="/select"></a>
                        <img class="profile-img" src="" style="object-fit: cover; object-position: top;">
                        <h2 class="usr-name"></h2>
                        <i class="bi bi-three-dots-vertical" style="float: inline-end;"></i>
                    </div>
                        <div class="chat-body" id="chat-body"></div>
                    </div>
                   <div class="chat-footer">
                        <input type="text" class="form-control inputval " placeholder="Type a message...">
                        <button class="btn btn-primary" id="send-btn"  style="transform: rotate(38deg);"><i class="bi bi-send"></i></button>
                    </div>
                </div>
            </div>
        </div>
       
    
        <!-- <script src="../chattingScript.js"></script> -->
      <script src="../script.js"></script>
      </script>
</body>
</html>